        <Color x:Key="ThreadHeaderSubjectColor">#2E7D32</Color>
        <!-- Redの800 -->
        <Color x:Key="ThreadHeaderNameColor">#c62828</Color>
        <!-- Blueの800 -->
        <Color x:Key="ThreadHeaderMailColor">#1565C0</Color>
        <!-- Deep Orangeの800 -->
        <Color x:Key="ThreadHeaderSoudaneColor">#D84315</Color>
        <sys:Double x:Key="ThreadHeaderFontSize">14</sys:Double>
        <FontFamily x:Key="ThreadHeaderFont">メイリオ</FontFamily>
        <sys:Double x:Key="ThreadTextFontSize">16</sys:Double>
