        <Color x:Key="ViewerForegroundColor">#263238</Color>
        <Color x:Key="ViewerBackgroundColor">#F5F5F5</Color>
        <Color x:Key="ViewerBorderColor">Gray</Color>

        <sys:Double x:Key="CatalogImageSize">80</sys:Double>
