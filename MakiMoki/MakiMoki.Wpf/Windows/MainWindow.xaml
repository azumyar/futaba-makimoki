                                                    </Style>
                                                </ContextMenu.ItemContainerStyle>
                                            </ContextMenu>
                                        </Button.Resources>
                                        <!-->
                                        <Button.ContextMenu>
                                            <!-- VMとバインドできない？？ -->
                                            <ContextMenu ItemsSource="{Binding Source={x:Static conf:ConfigLoader.Bord}}">
                                                <ContextMenu.ItemContainerStyle>
