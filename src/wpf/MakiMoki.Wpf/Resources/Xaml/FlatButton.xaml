                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid>
                            <Border
                                x:Name="Cover"
                                CornerRadius="4"
                                Opacity="0">
                                <!-- Background="{TemplateBinding Background}" -->
                                <Border.Background>
